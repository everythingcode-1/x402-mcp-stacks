generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RegisteredTool {
  id          String   @id @default(uuid())
  name        String
  description String
  apiUrl      String
  price       String
  priceUnit   String   @default("STX")
  walletAddress String
  category    String?
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("registered_tools")
}

model ToolCall {
  id          String   @id @default(uuid())
  toolId      String
  userId      String
  txId        String?
  amount      String
  status      String
  createdAt   DateTime @default(now())
  
  @@map("tool_calls")
}
